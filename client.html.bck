<!DOCTYPE html>
<html lang="no">

<head>
  <meta charset="UTF-8">
  <title>Condo Client</title>
</head>

<body>
  <h1>Condo Client</h1>

  <pre id="usersOutput"></pre>
  <pre id="accountsOutput"></pre>

  <script type="module">

    loadUsersAndAccounts();

    // Get users and accounts
    async function loadUsersAndAccounts() {
      try {
        const response = await fetch("http://localhost:3000/users");
        if (!response.ok) throw new Error("Network error (users)");
        const users = await response.json();
        document.getElementById("usersOutput").textContent = JSON.stringify(users, null, 2);
      } catch (error) {
        console.error("Error loading users:", error);
      }

      try {
        const response = await fetch("http://localhost:3000/accounts");
        if (!response.ok) throw new Error("Network error (accounts)");
        const accounts = await response.json();
        document.getElementById("accountsOutput").textContent = JSON.stringify(accounts, null, 2);
      } catch (error) {
        console.log("Error loading accounts:", error);
      }
    }

  </script>
</body>

</html>