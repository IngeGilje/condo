?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>

    <!-- Safe defaults -->
    <modules>
      <!-- Ensure rewrite module doesn't crash if missing -->
      <remove name="RewriteModule" />
    </modules>

    <!-- URL Rewrite rules (works only if module is installed) -->
    <rewrite>
      <rules>
        <rule name="WebSocketProxy" stopProcessing="true">
          <match url="^ws(.*)" />
          <action type="Rewrite" url="http://localhost:3000/ws{R:1}" />
        </rule>
      </rules>
    </rewrite>

  </system.webServer>
</configuration>